<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Home">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onRecordButtonClick"
        app:backgroundTint="@android:color/background_light"
        app:srcCompat="@drawable/record_button" />

    <TextView
        android:id="@+id/record_trip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Record Trip"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/view_previous_trips_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onPreviousTripsButtonClick"
        android:text="View Previous Trips"
        android:textAlignment="center" />

</LinearLayout>